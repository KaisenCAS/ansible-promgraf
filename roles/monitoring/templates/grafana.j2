server {
        listen 80;
        server_name grafana.fyc.lan;

        location / {

        return 301 https://grafana.fyc.lan;
        }
}

server {
	listen 443;
	server_name grafana.fyc.lan;
	root /var/lib/grafana;
	ssl on;
	ssl_certificate /etc/ssl/certs/grafana.fyc.lan.pem;
	ssl_certificate_key /etc/ssl/certs/grafana.fyc.lan.pem;
	ssl_protocols TLSv1.2 TLSv1.3;

	location / {
	proxy_pass http://127.0.0.1:3000;
}
}
